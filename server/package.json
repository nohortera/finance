{
  "name": "streaming-prices",
  "version": "1.0.0",
  "description": "Push JSON prices in real-time over websockets",
  "main": "server.js",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "socket.io": "^4.0.1"
  },
  "devDependencies": {},
  "scripts": {
    "preinstall": "npm run client:install && npm run client:build && npm run server:install",
    "start": "cross-env NODE_ENV=production npm start --prefix server",
    "server:install": "npm install --prefix server",
    "client:install": "npm install --prefix client",
    "client:build": "npm run build --prefix client"
  }
}
